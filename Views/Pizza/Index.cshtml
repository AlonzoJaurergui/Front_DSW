@model IEnumerable<PizzaNicola_AspNetCore.Models.Entidades.Pizza>

@{
    ViewData["Title"] = "Index";
}
<style>
    .search-container {
        display: flex; 
        justify-content: space-between;
    }
    
</style>

<h1>Pizzas Disponibles</h1>
<br />


<div class="search-container">
    <div class="table-container">
        <p>
            <a class="btn btn-primary" asp-controller="Pizza" asp-action="InsertPizza">
                Añadir Nueva Pizza
            </a>
        </p>
    </div>
    <div class="search-form-container">
        <form asp-action="BuscarPizzas" method="get" class="search-form">
            <div class="form-group">
                <label for="nombre">Buscar:</label>
                <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
            
        </form> <br />
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.nombrePizza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ingredientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tamanio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoMasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.nombrePizza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingredientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tamanio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoMasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
               <a class="btn btn-warning" asp-action="UpdatePizza" asp-route-id="@item.id">Actualizar</a>                               
               <a href="#" class="btn btn-danger" onclick="confirmarEliminacion('@item.id')">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    function confirmarEliminacion(id) {
        if (confirm("¿Seguro que deseas eliminar?")) {
            window.location.href = '/Pizza/DeletePizza?id=' + id;
        }
    }
</script>